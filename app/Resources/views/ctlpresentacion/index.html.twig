{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Catalogo de presentaciones{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre de presentacion</th>
                <th>Detalle</th>
                <th>Fecha de registro</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
          {% for ctlPresentacion in ctlPresentacions %}
                    <tr>
                    <td>{{ ctlPresentacion.nombrePresentacion }}</td>
                    <td>{{ ctlPresentacion.detallePresentacion }}</td>
                    <td>{% if ctlPresentacion.registroSchema %}{{ ctlPresentacion.registroSchema|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                           <a href="{{ path('presentacion_show', { 'id': ctlPresentacion.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                           <a href="{{ path('presentacion_edit', { 'id': ctlPresentacion.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                          </td>
                    </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
<br />
<a href="{{ path('presentacion_new') }}" class="btn btn-small btn-primary">Agregar Presentaci√≥n</a>
{% endblock %}
