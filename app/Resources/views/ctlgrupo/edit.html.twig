{% extends 'base.html.twig' %}
{% block titulo %}Editar grupo{% endblock %}
{% block body %}
<div class="col-sm-12">
 <div class="white-box">
    {{ form_start(edit_form) }}
		{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_UNABAST') %}
			{{ form_row(edit_form.enableSchema) }}
		{% else %}
			<div id="divCheckbox" style="display: none;">{{ form_row(edit_form.enableSchema) }}</div>
		{% endif %}
        {{ form_row(edit_form) }}
        <input type="submit" value="Actualizar" class="btn btn-primary"/>
    {{ form_end(edit_form) }}
 </div>
</div>
<div class="col-sm-12">
 <div class="white-box">
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar" class="btn btn-danger">
            {{ form_end(delete_form) }}
 </div>
</div>
{% endblock %}
{% block breadcrumb %}
<a href="{{ path('grupos_index') }}"><button class="btn btn-warning">Regresar a listado</button></a>
{% endblock %}

{% block footer_js %}
<script src="{{ asset('assets/') }}plugins/bower_components/switchery/dist/switchery.min.js"></script>
<script src="{{ asset('assets/') }}plugins/bower_components/custom-select/custom-select.min.js" type="text/javascript"></script>
<script src="{{ asset('assets/') }}plugins/bower_components/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
<script src="{{ asset('assets/') }}plugins/bower_components/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
<script src="{{ asset('assets/') }}plugins/bower_components/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js" type="text/javascript"></script>
<script type="text/javascript" src="{{ asset('assets/') }}plugins/bower_components/multiselect/js/jquery.multi-select.js"></script>
<script>
jQuery(document).ready(function() {
  $("#minsal_suministrobundle_ctlgrupo_grupo").select2({sorter: function(data) { return data.sort(); }});
  $("#minsal_suministrobundle_ctlgrupo_roles").select2({sorter: function(data) { return data.sort(); }});
  $("#minsal_suministrobundle_ctlgrupo_unidad").select2({sorter: function(data) { return data.sort(); }});
});
</script>
{% endblock %}
