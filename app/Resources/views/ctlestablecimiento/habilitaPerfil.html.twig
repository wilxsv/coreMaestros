{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Listado de Establecimientos{% endblock %}

{% block body %}
<div class="row-fluid">
 <div class="span12">
  <div class="tabbable">
   <ul class="nav nav-tabs" id="myTab">
    <li class="active"><a data-toggle="tab" href="#oficial"><i class="green icon-home bigger-110"></i>Listado Oficial </a></li>
    <li class=""><a data-toggle="tab" href="#solicitados"> Pendientes de ser habilitados <span class="badge badge-important">#</span></a></li>
    <li class=""><a data-toggle="tab" href="#denegados"> Denegados <span class="badge badge-important">X</span></a></li>
   </ul>
  <div class="tab-content">
   <div id="denegados" class="tab-pane">
    <table class="table table-striped table-bordered table-hover">
     <thead>
      <tr>
       <th>Nombre</th>
       <th>Direccion</th>
       <th>Telefono</th>
       <th>Registro</th>
       <th>Tipo</th>
      </tr>
     </thead>
     <tbody>
      {% for ctlEstablecimiento in denegados %}
       <tr>
        <td>{{ ctlEstablecimiento.nombre }}</td>
        <td>{{ ctlEstablecimiento.direccion }}</td>
        <td>{{ ctlEstablecimiento.telefono }}</td>
        <td>{{ ctlEstablecimiento.registroSchema | date("d/m/Y h:i:s A") }}</td>
        <td>{{ ctlEstablecimiento.idTipoEstablecimiento }}</td>
       </tr>
      {% endfor %}
     </tbody>
    </table>
   </div>
   <div id="oficial" class="tab-pane active">
    <table id="sample-table" class="table table-striped table-bordered table-hover">
     <thead>
      <tr>
       <th>Nombre</th>
       <th>Direccion</th>
       <th>Telefono</th>
       <th>Tipo</th>
      </tr>
     </thead>
     <tbody>
      {% for ctlEstablecimiento in ctlEstablecimientos %}
       <tr>
        <td><a href="{{ path('establecimiento_show', { 'id': ctlEstablecimiento.id }) }}">{{ ctlEstablecimiento.nombre }}</a></td>
        <td>{{ ctlEstablecimiento.direccion }}</td>
        <td>{{ ctlEstablecimiento.telefono }}</td>
        <td>{{ ctlEstablecimiento.idTipoEstablecimiento }}</td>
       </tr>
      {% endfor %}
     </tbody>
    </table>
   </div>
   <div id="solicitados" class="tab-pane">
    <table class="table table-striped table-bordered table-hover">
     <thead>
      <tr>
       <th>Nombre</th>
       <th>Direccion</th>
       <th>Telefono</th>
       <th>Registro</th>
       <th>Tipo</th>
      </tr>
     </thead>
     <tbody>
      {% for ctlEstablecimiento in pendientes %}
       <tr>
        <td><a href="{{ path('establecimiento_show', { 'id': ctlEstablecimiento.id }) }}">{{ ctlEstablecimiento.nombre }}</a></td>
        <td>{{ ctlEstablecimiento.direccion }}</td>
        <td>{{ ctlEstablecimiento.telefono }}</td>
        <td>{{ ctlEstablecimiento.registroSchema | date("d/m/Y h:i:s A") }}</td>
        <td>{{ ctlEstablecimiento.idTipoEstablecimiento }}</td>
       </tr>
      {% endfor %}
     </tbody>
    </table>
   </div>
  </div>
 </div>
</div>
{% endblock %}

{% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
