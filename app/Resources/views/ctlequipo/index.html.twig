{% extends 'base.html.twig' %}
{% block title %}Listado de ECOS{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Establecimiento</th>
                <th>Nombreservicio</th>
                <th>Recursos</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlEquipo in ctlEquipos %}
            <tr>
                
                <td>
                 {% for r in stablecimiento %}
                   {% if ctlEquipo.establecimiento == r.id %}{{ r.nombre }}{% endif %}
                 {% endfor %}
                </td>
                <td>{{ ctlEquipo.nombreEquipo }}</td>
                <td>
                  <a href="{{ path('eco_show', { 'id': ctlEquipo.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                  <a href="{{ path('eco_edit', { 'id': ctlEquipo.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('eco_new') }}" class="btn btn-primary">Agregar ECO</a>
{% endblock %}
{% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
