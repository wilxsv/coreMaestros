{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Listado de Grupos{% endblock %}
{% block body %}
<div class="row-fluid">
  <h3 class="header smaller lighter blue"></h3>
  <div class="table-header">
  </div>

    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Suministro</th>
                <th>Grupo</th>
                <th>Grupo superior</th>
                <th>Unidades</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlGrupo in ctlGrupos %}
            <tr>
                <td>{{ ctlGrupo.suministro }}</td>
                <td>{{ ctlGrupo.nombreGrupo }}</td>
                <td>{{ ctlGrupo.grupoId }}</td>
                <td>{{ ctlGrupo.unidad | join(', ') }}</td>
                <td>
                 <a href="{{ path('grupo_show', { 'id': ctlGrupo.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                 <a href="{{ path('grupo_edit', { 'id': ctlGrupo.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('grupo_new') }}" class="btn btn-small btn-primary">Agregar nuevo grupo</a>
{% endblock %}
{% block footer_js %}

<script type="text/javascript">

  $(function() {
    var oTable2 = $('#sample-table').dataTable();
  })
</script>
{% endblock %}
