{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Concentración por medicamento{% endblock %}
{% block body %}
<div class="row-fluid">
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
            <th>Medicamento</th>
                <th>Concentración</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
          {% for ctlConcentracion in ctlConcentracions %}
                    <tr>
                    <td>{{ ctlConcentracion.id }}</td>
                    <td>{{ ctlConcentracion.detalleConcentracion }}</td>
                    <td>
                           <a href="{{ path('concentracion_show', { 'id': ctlConcentracion.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                           <a href="{{ path('concentracion_edit', { 'id': ctlConcentracion.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                          </td>
                    </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
<br />
<a href="{{ path('concentracion_new') }}" class="btn btn-small btn-primary">Agregar concentración a medicamento</a>
{% endblock %}
{% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
