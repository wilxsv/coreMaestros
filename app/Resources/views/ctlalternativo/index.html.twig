{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Medicamentos alternativos{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Medicamento</th>
                <th>Medicamentos alternativos</th>
                <th>Multipo / Divisor</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlAlternativo in ctlAlternativos %}
            <tr>
                <td>{{ ctlAlternativo.ctlInsumo }}</td>
                <td>{{ ctlAlternativo.ctlInsumoAlternativo }}</td>
                <td>{{ ctlAlternativo.multiploAlternativo }}</td>
                <td>
                 <a href="{{ path('alternativo_show', { 'id': ctlAlternativo.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                 <a href="{{ path('alternativo_edit', { 'id': ctlAlternativo.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('alternativo_new') }}">Nuevo medicamento alternativo</a>
    {% endblock %}
    {% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
