{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Listado de principios activos{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre del principio activo</th>
                <th>Tipo de principio</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
        {% for ctlPrincipio in ctlPrincipios %}
            <tr>
                <td>{{ ctlPrincipio.nombrePrincipio }}</td>
                <td>{{ ctlPrincipio.tipoPrincipio }}</td>
                <td>
                 <a href="{{ path('principio_show', { 'id': ctlPrincipio.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                 <a href="{{ path('principio_edit', { 'id': ctlPrincipio.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('principio_new') }}">Agregar principio</a>
    {% endblock %}
    {% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
