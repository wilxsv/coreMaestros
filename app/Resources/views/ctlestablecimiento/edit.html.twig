{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Editar Establecimiento{% endblock %}
{% block body %}
{% if is_granted('ROLE_VALIDA') %}
<div class="row-fluid">
 <div class="span6">
  <div class="widget-box">
   <div class="widget-header widget-header-flat"><h4>Enviar comentarios</h4></div>
   <div class="widget-body">
    <div class="widget-main">
     <div class="row-fluid">
      {{ form_start(edit_form) }}
     <div class="control-group ">{{ form_label(edit_form.detalleSchema) }}
      <div class="controls"><span class="span12 input-icon input-icon-right">{{ form_widget(edit_form.detalleSchema) }}</span>{{ form_errors(edit_form.detalleSchema) }}</div>
     </div>
      <div id="divCheckbox" style="display: none;">
       {{ form_widget(edit_form) }}
	  </div>
      <input type="submit" value="Enviar observación y no validar" class="btn btn-danger">
      </form>
     </div>
    </div>
   </div>
  </div>
 </div>
 <div class="span6">
  <div class="widget-box">
   <div class="widget-header widget-header-flat"><h4>Aprobar</h4></div>
   <div class="widget-body">
    <div class="widget-main">
     <div class="row-fluid">
      {{ form_start(delete_form) }}
     <div class="control-group ">{{ form_label(delete_form.detalleSchema) }}
      <div class="controls"><span class="span12 input-icon input-icon-right">{{ form_widget(delete_form.detalleSchema) }}</span>{{ form_errors(delete_form.detalleSchema) }}</div>
     </div>
      <div id="divCheckbox" style="display: none;">
	   {{ form_widget(delete_form) }}
	   <input type="hidden" id="maestro_modelobundle_ctlestablecimiento_estadoSchema" name="maestro_modelobundle_ctlestablecimiento[estadoSchema]" value="1" />
	  </div>
      <input type="submit" value="Validar establecimiento" class="btn btn-primary">
      </form>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>


{% elseif is_granted('ROLE_HABILITA') %}


<div class="row-fluid">
 <div class="span6">
  <div class="widget-box">
   <div class="widget-header widget-header-flat"><h4>Enviar comentarios</h4></div>
   <div class="widget-body">
    <div class="widget-main">
     <div class="row-fluid">
      {{ form_start(edit_form) }}
      {{ form_row(edit_form.detalleSchema) }}
      <div id="divCheckbox" style="display: none;">{{ form_widget(edit_form) }}</div>
       <input type="submit" value="Enviar observación y no habilitar" class="btn btn-danger">
      </form>      
     </div>
    </div>
   </div>
  </div>
 </div>
 <div class="span6">
  <div class="widget-box">
   <div class="widget-header widget-header-flat"><h4>Aprobar</h4></div>
   <div class="widget-body">
    <div class="widget-main">
     <div class="row-fluid">
      {{ form_start(delete_form) }}
      {{ form_row(delete_form.detalleSchema) }}
      <div id="divCheckbox" style="display: none;">
       {{ form_widget(delete_form) }}
	   <input type="hidden" id="maestro_modelobundle_ctlestablecimiento_enableSchema" name="maestro_modelobundle_ctlestablecimiento[enableSchema]" value="1" />
      </div>
      <input type="submit" value="Habilitar establecimiento" class="btn btn-primary">
      </form>
     </div>
    </div>
   </div>
  </div>
 </div>
</div>


{% elseif (ctlEstablecimiento.userIdSchema == app.user.id) %}


<div class="row-fluid">
 <div class="span6">
  <div class="widget-box">
   <div class="widget-header widget-header-flat"><h4></h4></div>
   <div class="widget-body">
    <div class="widget-main">
     <div class="row-fluid">
      {{ form_start(edit_form) }}
      {{ form_widget(edit_form) }}
      {{ form_row(edit_form.detalleSchema) }}
      <div id="divCheckbox" style="display: none;"></div>
       <input type="submit" value="Enviar actualilzación" class="btn btn-danger">
      </form>      
     </div>
    </div>
   </div>
  </div>
 </div>
</div>


{% endif %}


<br/>
<a href="{{ path('maestro_homepage') }}" class="btn">Regresar al listado</a>
{% endblock %}
