{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Opciones de recursos humanos a ECOS{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre de Recurso Humano</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlRecursoHumano in ctlRecursoHumanos %}
            <tr>
                <td>{{ ctlRecursoHumano.nombreRecursoHumano }}</td>
                <td>
                  <a href="{{ path('recurso_show', { 'id': ctlRecursoHumano.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                  <a href="{{ path('recurso_edit', { 'id': ctlRecursoHumano.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('recurso_new') }}">Agregar Recurso humano</a>
{% endblock %}
