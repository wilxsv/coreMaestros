{% extends 'MaestroCoreBundle::default.html.twig' %}

{% block body %}

<div class="row-fluid">
  <h3 class="header smaller lighter blue">Listado de Establecimientos</h3>
  <div class="table-header">
    Detalle de establecimientos
  </div>

    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Anioapertura</th>
                <th>Instmortalidad</th>
                <th>Cabezamicrored</th>
                <th>Hospitalizacion</th>
                <th>Enableschema</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlEstablecimiento in ctlEstablecimientos %}
            <tr>
                <td>{{ ctlEstablecimiento.nombre }}</td>
                <td>{{ ctlEstablecimiento.direccion }}</td>
                <td>{{ ctlEstablecimiento.anioApertura }}</td>
                <td>{{ ctlEstablecimiento.instMortalidad }}</td>
                <td>{% if ctlEstablecimiento.cabezaMicrored %}Si{% else %}No{% endif %}</td>
                <td>{% if ctlEstablecimiento.hospitalizacion %}Si{% else %}No{% endif %}</td>
                <td>{% if ctlEstablecimiento.enableSchema %}Si{% else %}No{% endif %}</td>
                <td>
                 <a href="{{ path('establecimiento_show', { 'id': ctlEstablecimiento.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                 <a href="{{ path('establecimiento_edit', { 'id': ctlEstablecimiento.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('establecimiento_new') }}" class="btn btn-small btn-primary">Agregar nuevo establecimiento</a>
{% endblock %}
{% block footer_js %}

<script type="text/javascript">

  $(function() {
    var oTable2 = $('#sample-table').dataTable();
  })
</script>
{% endblock %}
