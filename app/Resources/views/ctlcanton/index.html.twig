{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Listado de cantones{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Rural</th>
                <th>Digestyc2015</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlCanton in ctlCantons %}
            <tr>
                <td>{{ ctlCanton.nombre }}</td>
                <td>{% if ctlCanton.rural %}Yes{% else %}No{% endif %}</td>
                <td>{{ ctlCanton.digestyc2015 }}</td>
                <td>
                  <a href="{{ path('canton_show', { 'id': ctlCanton.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                  <a href="{{ path('canton_edit', { 'id': ctlCanton.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('canton_new') }}">Agregar Canton</a>
    {% endblock %}
    {% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
