{% extends 'MaestroCoreBundle::default.html.twig' %}
{% block title %}Listado de Establecimientos{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Region</th>
                <th>SIBASI</th>
                <th>Micro Red</th>
                <th>Establecimiento</th>
                <th>ECOS</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlEstablecimiento in ctlEstablecimientos %}
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td><a href="{{ path('establecimiento_show', { 'id': ctlEstablecimiento.id }) }}">{{ ctlEstablecimiento.nombre }}</a></td>
                <td></td>
            </tr>
        {% endfor %}
        
        {% for e in listado %}
            <tr>
                <td>{{ e.direccion|join('/') }}</td>
                <td></td>
                <td></td>
                <td><a href="{{ path('establecimiento_show', { 'id': e.id }) }}">{{ e.nombre }}</a></td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if is_granted('ROLE_AGREGA') %}
<a href="{{ path('establecimiento_add') }}" class="btn btn-primary">Agregar Establecimiento</a>
{% endif %}
{% endblock %}
{% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
