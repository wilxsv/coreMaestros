{% extends 'base.html.twig' %}
{% block title %}Listado de accesos{% endblock %}
{% block body %}
    <table id="sample-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nombre de acceso</th>
                <th>Path</th>
                <th>Es publico</th>
                <th>Orden en menu</th>
                <th>Roles</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ctlAcceso in ctlAccesos %}
            <tr>
                <td><a href="{{ path('acceso_show', { 'id': ctlAcceso.id }) }}">{{ ctlAcceso.nombreAcceso | raw }}</a></td>
                <td>{{ ctlAcceso.pathAcceso }}</td>
                <td>{% if ctlAcceso.publicAcceso %}Si{% else %}No{% endif %}</td>
                <td>{{ ctlAcceso.ordenAcceso }}</td>
                <td>{{ ctlAcceso.ctlRol | join(' | ') }}</td>
                <td>
                  <a href="{{ path('acceso_show', { 'id': ctlAcceso.id }) }}">Ver <i class="icon-show bigger-120"></i></a>
                  <a href="{{ path('acceso_edit', { 'id': ctlAcceso.id }) }}">Editar <i class="icon-edit bigger-120"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('acceso_new') }}" class="btn btn-primary">Agregar acceso</a>
{% endblock %}
{% block footer_js %}<script type="text/javascript">$(function(){ var oTable2 = $('#sample-table').dataTable(); })</script>{% endblock %}
